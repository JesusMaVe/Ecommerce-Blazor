        font-size: 1.125rem;
        margin: 0;
    }

    .filters-card {
        background-color: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(8px);
        padding: 2rem;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        border-radius: 1.5rem;
        border: 1px solid rgba(191, 191, 191, 0.3);
        margin-bottom: 2rem;
    }

    .filters-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #0D0D0D;
        margin-bottom: 1.5rem;
